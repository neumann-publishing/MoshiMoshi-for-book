{
	"name": "moshimoshi-server",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"start:node": "node ./dist/index.js",
		"start": "pm2 start ./dist/index.js -i max",
		"stop": "pm2 stop ./dist/index.js",
		"restart": "pm2 restart ./dist/index.js",
		"kysely-codegen": "kysely-codegen --out-file src/db/db.d.ts --dialect=postgres --env-file .env --camel-case",
