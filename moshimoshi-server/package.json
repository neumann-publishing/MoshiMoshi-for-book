		"uuid": "^11.1.0",
		"valibot": "1.0.0-rc.3"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@hono/vite-build": "^1.3.0",
		"@hono/vite-dev-server": "^0.19.0",
		"@tsconfig/node23": "^23.0.0",
		"@types/node": "^20.11.17",
		"@types/pg": "^8.11.11",
		"@types/pg-pool": "^2.0.6",
		"concurrently": "^9.1.2",
		"kysely-codegen": "^0.17.0",
